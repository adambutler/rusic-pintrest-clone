<style type="text/css">
	.container {
		padding: 0 20px;
		width: 700px;
	}
	
	
</style>

<form method="post" action="{{space.permalink}}/ideas" class="add-new" enctype="multipart/form-data">
	<input name="idea[content]" placeholder="Description" class="hide" value="Nothing to see here!"/>
	<div class="hide">
		{% for image in params.images %}
			<input name="idea[custom1]" type="radio" value="{{image}}" id="radio-{{forloop.index0}}"/>
		{% endfor %}
	</div>
	
	<div id="formbar">
		<input name="idea[title]" type="text" placeholder="Title">
		<input type="submit">
	</div>
</form>

<ul class="unstyled mainlist">
	{% for image in params.images %}
		{% if forloop.index0 < 3 %}
			<label for="radio-{{forloop.index0}}">
				<li class="main-list-item">
					<img src="{{image}}"/>
				</li>
			</label>
		{% endif %}
	{% endfor %}
</ul>
<ul class="unstyled mainlist">
	{% for image in params.images %}
		{% if forloop.index0 >= 3 %}
			{% if forloop.index0 < 6 %}
				<label for="radio-{{forloop.index0}}">
					<li class="main-list-item">
						<img src="{{image}}"/>
					</li>
				</label>
			{% endif %}
		{% endif %}
	{% endfor %}
</ul>
<ul class="unstyled mainlist last">
	{% for image in params.images %}
		{% if forloop.index0 >= 6 %}
			<label for="radio-{{forloop.index0}}">
				<li class="main-list-item">
					<img src="{{image}}"/>
				</li>
			</label>
		{% endif %}
	{% endfor %}
</ul>

<script type="text/javascript">
	$('label').click(function(){
		$('.main-list-item').each(function(){
			$(this).removeClass('selected');
		})
		console.log($(this).parent());
		$(this).parent().addClass('selected');
	})
</script>
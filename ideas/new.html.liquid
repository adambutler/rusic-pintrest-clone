<form method="post" action="{{space.permalink}}/ideas" class="add-new" enctype="multipart/form-data">
	<input name="idea[title]" type="text" placeholder="Title">
	<input name="idea[content]" placeholder="Description"/>
	<input name="idea[custom1]" type="text" placeholder="image url">
	<input type="submit">
</form>

{% for image in params.images %}
	<input name="idea[custom1]" type="radio" value="{{image}}" id="radio-{{forloop.index0}}"/>
{% endfor %}

<ul class="thumbnails">
	{% for image in params.images %}
		<li class="span3">
			<label class="thumbnail" for="radio-{{forloop.index0}}">
				<img src="{{image}}" />
			</label>
		</li>
	{% endfor %}
</ul>
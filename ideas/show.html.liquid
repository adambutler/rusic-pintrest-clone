{% if params.ajax %}
	{% if params.ajax == 'comments' %}
		<div id="ajaxContent">
			{% if idea.comments != empty %}
				{% for comment in idea.comments %}
					<li>
						<img src="{{comment.user.image_url}}" alt="avatar" />
						<div class="comment-content">{{comment.body | markdown}}</div>
						<div class="comment-meta">by <a href="{{comment.user.profile_url}}" title="Profile of {{comment.user.nickname}} on {{comment.user.provider}}">{{comment.user.nickname}}</a><br /> {{ comment.created_at | human_time_distance }} ago</div>
					</li>
				{% endfor %}
			{% else %}
				<li>There aren't any comments here yet, why not be the first to say something!</li>
			{% endif %}
		</div>
	{% endif %}
{% else %}
	<form action="{{idea.permalink}}/comments" method="post" charset="utf-8">
		<div class="input"><textarea id="comment_body" name="comment[body]"></textarea></div>
		<div class="checkarea"><input class="checkbox" type="checkbox" id="comment_should_post_to_social" name="comment[should_post_to_social]" value="1" checked="checked" /> share this comment to {{current_user.provider}}?</div>
		<input type="submit" name="submit" value="post comment" class="btn primary" />
	</form>
{% endif %}
